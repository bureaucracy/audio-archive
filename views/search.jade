include mixins
extend layout

block search

block content
  section
    h1 search
    h2= keyword
    form(method='post', action='/search')
      input(type='text', name='keyword')
      input(type='hidden', name='crumb', value='#{crumb}')
      button(type='submit') find
    ol.mixes
      for post in posts
        +postView(post, {
          showDetails: false
        })
