extend layout

block content
  section
    h1 latest
    ol.mixes
      for post in posts
        +postView(post, {
          showDetails: false
        })
        #actions
          .edit
            a(href='/post/edit/#{post.pid}') edit
          .delete
            form(method='post', action='/post/delete/#{post.created}!#{post.pid}')
              input(type='hidden', name='crumb', value='#{crumb}')
              button(type='submit') delete
